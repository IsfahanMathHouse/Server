@{
	ViewBag.Title = "مدیریت گروه ها";
}

<h2>@ViewBag.Title</h2>

<div ng-app="groupslistApp" ng-controller="groupsListCtrl">

	<script type="text/ng-template" id="Editor.html">
		<div class="modal-header">
			<h3 class="modal-title">{{title}}</h3>
		</div>
		<div class="modal-body">
			<div class="row form-group">
				<div class="col-xs-4">
					عنوان گروه:
				</div>
				<div class="col-xs-8">
					<input type="text" ng-model="group.name" />
				</div>
			</div>
			<div class="row form-group">
				<div class="col-xs-4">
					باز یا بسته:
				</div>
				<div class="col-xs-8">
					<select ng-options="p.groupPublicityId as p.name for p in groupPublicities" ng-model="group.groupPublicityId"></select>
				</div>
			</div>
			<div class="row form-group">
				<div class="col-xs-4">
					شرح:
				</div>
				<div class="col-xs-8">
					<textarea ng-model="group.description"></textarea>
				</div>
			</div>
		</div>
		<div class="modal-footer">
			<button class="btn btn-primary" ng-click="save()">ذخیره</button>
			<button class="btn btn-warning" ng-click="cancel()">انصراف</button>
		</div>
	</script>


	<button type="button" ng-click="create();">ایجاد</button>
	<button type="button" ng-click="edit();">ویرایش</button>
	<button type="button" ng-click="delete();">حذف</button>

	<div class="gridStyle" ui-grid="gridOptions" ui-grid-pinning ui-grid-resize-columns>

	</div>

</div>

@section scripts{
	<script src="~/Scripts/App/groupsList.js"></script>
}